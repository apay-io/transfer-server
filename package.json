{
  "name": "stellar-anchor",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "postinstall": "cp .circleci/algo.d.ts node_modules/bitgo/dist/types/src/v2/coins/algo.d.ts",
    "build": "nest build",
    "build:dev": "nest build --watch --webpack",
    "start": "node dist/main",
    "start:monitor": "node dist/stellar-monitor",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "6.11.6",
    "@nestjs/core": "6.11.6",
    "@nestjs/platform-express": "6.11.6",
    "@nestjs/typeorm": "6.2.0",
    "@types/dotenv": "6.1.1",
    "bitgo": "9.5.1",
    "bull": "3.12.1",
    "class-transformer": "0.2.3",
    "class-validator": "0.11.0",
    "express-rate-limit": "5.0.0",
    "lodash.groupby": "4.6.0",
    "nest-bull": "0.9.0",
    "nestjs-config": "1.4.5",
    "nestjs-redis": "1.2.5",
    "pg": "7.18.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.5.4",
    "stellar-sdk": "4.0.0",
    "typeorm": "0.2.22"
  },
  "devDependencies": {
    "@nestjs/cli": "6.14.2",
    "@nestjs/schematics": "6.9.3",
    "@nestjs/testing": "6.11.6",
    "@types/bull": "3.12.0",
    "@types/express": "4.17.2",
    "@types/jest": "25.1.2",
    "@types/node": "12.12.27",
    "@types/supertest": "2.0.8",
    "axios": "latest",
    "jest": "25.1.0",
    "prettier": "1.19.1",
    "supertest": "4.0.2",
    "ts-jest": "25.2.0",
    "ts-loader": "6.2.1",
    "ts-node": "8.6.2",
    "tsconfig-paths": "3.9.0",
    "tslint": "5.20.1",
    "typescript": "3.7.5",
    "webpack-node-externals": "1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
